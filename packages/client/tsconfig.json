{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "types": ["vitest/globals"],
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp", "examples", "dist"]
}
